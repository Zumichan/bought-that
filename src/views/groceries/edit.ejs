<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Item</h1>

      <form action="/groceries/<%= grocery.id %>/update" method="post">
        <div class="form-group">
          <label for="item">Grocery Item</label>
          <input value="<%= grocery.item %>" type="text" class="form-control" name="item" aria-describedby="itemHelp" placeholder="Enter Item">
        </div>
        <div class="form-group">
          <label for ="purchased">Purchased:</label>
          <select class="form-control" name="purchased">
            <option value="false">To be purchased</option>
            <option value="true">Purchased</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
